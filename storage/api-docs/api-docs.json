            "/auth/register": {
                "post": {
                    "tags": [
                        "Auth"
                    ],
                    "summary": "Registrar novo usuário",
                    "description": "Endpoint para registrar um novo usuário",
                    "operationId": "registerUser",
                    "requestBody": {
                        "required": true,
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "required": [
                                        "name",
                                        "email",
                                        "password",
                                        "password_confirmation"
                                    ],
                                    "properties": {
                                        "name": {
                                            "type": "string",
                                            "example": "Novo Usuário"
                                        },
                                        "email": {
                                            "type": "string",
